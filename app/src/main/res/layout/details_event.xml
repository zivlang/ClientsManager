<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eventTtlId"
        android:layout_margin="@dimen/ttlMargin"
        android:textColor="@color/clientsTtl"
        android:textAlignment="center"
        android:textSize="@dimen/ttlSize"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eventTimeDateId"
        android:layout_margin="@dimen/ttlMargin"
        android:textAlignment="center"
        android:textSize="@dimen/btnTxtSize"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eventDescId"
        android:layout_margin="@dimen/ttlMargin"
        android:textAlignment="center"
        android:textSize="@dimen/btnTxtSize"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/exitDetailsBtnId"
            android:textAlignment="center"
            android:layout_margin="@dimen/fab_margin"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/btnTxtSize"
            android:text="@string/exitEventDetails"/>
        <Button
            android:id="@+id/editEventBtnId"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/fab_margin"
            android:textSize="@dimen/btnTxtSize"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:text="@string/EditEvent"/>
    </LinearLayout>
</LinearLayout>